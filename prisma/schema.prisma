// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id
  firstName String
  lastName  String?
  imageUrl  String?
  lastSeen  Int?
  createdAt Int?
  updatedAt Int?
}

model Room {
  id        String   @id
  name      String?
  type      RoomType
  imageUrl  String?
  data      Json?
  metadata  Json?
  createdAt Int?
  updatedAt Int?
}

enum RoomType {
  GROUP
  PRIVATE
}
