// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id
  firstName String
  lastName  String?
  imageUrl  String?
  lastSeen  Int?
  createdAt Int?
  updatedAt Int?

  RoomMembership RoomMembership[]
}

model Room {
  id        String   @id
  name      String?
  type      RoomType
  imageUrl  String?
  data      Json?
  metadata  Json?
  createdAt Int?
  updatedAt Int?

  RoomMembership RoomMembership[]
}

model RoomMembership {
  userId String
  roomId String
  role   Role

  user User @relation(fields: [userId], references: [id])
  room Room @relation(fields: [roomId], references: [id])

  @@id([userId, roomId])
}

enum Role {
  ADMIN
  MEMBER
}

enum RoomType {
  GROUP
  PRIVATE
}
