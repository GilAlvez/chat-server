// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  firstName String
  lastName  String?
  imageUrl  String?
  lastSeen  DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages       Message[]
  RoomMembership RoomMembership[]
}

model Room {
  id        String   @id
  name      String
  type      RoomType
  imageUrl  String?
  data      Json?
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages       Message[]
  RoomMembership RoomMembership[]
}

model RoomMembership {
  role   Role
  userId String
  roomId String

  user User @relation(fields: [userId], references: [id])
  room Room @relation(fields: [roomId], references: [id])

  @@id([userId, roomId])
}

model Message {
  id               String      @id
  status           Status?
  type             MessageType
  data             Json?
  metadata         Json?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  userId           String
  roomId           String
  repliedMessageId String?

  user           User      @relation(fields: [userId], references: [id])
  room           Room      @relation(fields: [roomId], references: [id])
  repliedMessage Message?  @relation("MessageToMessage", fields: [repliedMessageId], references: [id])
  replies        Message[] @relation("MessageToMessage")
}

enum Role {
  ADMIN
  MEMBER
}

enum RoomType {
  GROUP
  PRIVATE
}

enum Status {
  SENT
  DELIVERED
  READ
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  FILE
}
